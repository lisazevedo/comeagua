    <p class="lis_equipe">lisazevedo</p>
    <p class="leo_equipe">Le4o</p>
    <img id="copyright_id" src="assets/copyright.png">

    <img class="ball" src="assets/ball.png">
    <img class="ball2" src="assets/ball.png">
    <img class="ball3" src="assets/ball.png">

    @using Microsoft.AspNet.Identity
    @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()
            <div class="dropdown">
                <button class="dropbtn"> <font class="txt_suaconta">Sua conta</font> </button>
                <div class="dropdown-content">
                    @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
              
                    <a href="javascript:document.getElementById('logoutForm').submit()">Fazer logoff</a>
                </div>
            </div>





        }
    }
    else
    {
       
        <i>
            
        </i>
        @Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })

    }


</body>
</html>

<style>
    #loginLink {
        position: absolute;
        font-family: Poppins;
        color: orange;
        margin-top: -7%;
        margin-left: 35%;
        font-size: 130%;   
        border: 2px solid;
        border-radius: 30px;
        padding: 6px;
    }

        #loginLink:hover {
            color: lightcoral;
            text-decoration: none;
        }

    .dropbtn {
        padding: 16px;
        font-size: 16px;
        cursor: pointer;
        border-radius: 30px;
        background-color: white;
        border-style: solid;
        border-color: orange;
    }

    /* The container <div> - needed to position the dropdown content */
    .dropdown {
        position: relative;
        display: inline-block;
    }

    /* Dropdown Content (Hidden by Default) */
    .dropdown-content {
        display: none;
        position: absolute;
        background-color: white;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

        /* Links inside the dropdown */
     .dropdown-content a{
        color: orange;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
        }

            /* Change color of dropdown links on hover */
    .dropdown-content a:hover {
        background-color: white;
    }

    /* Show the dropdown menu on hover */
    .dropdown:hover .dropdown-content {
        display: block;
    }

    /* Change the background color of the dropdown button when the dropdown content is shown */
    .dropdown:hover .dropbtn {
      color:lightcoral;
    }
    .txt_suaconta{
        color:orange;
    }

</style>
