<!DOCTYPE html>
<html lang="pt-br">
<head>
    @using comeagua.Models
    @model LoginViewModel
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">

    <link rel="stylesheet" href="StyleLogin.css" type="text/css">     
    @Styles.Render("~/Content/StyleLogin.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>


    <header>
        <div class="logo1">
            <a href='@Url.Action("Index", "Home")'>
                <img class="logo_id" src='@Url.Content("~/assets/logo.png")' />
            </a>      
        </div>
    </header>
    <canvas id="UgCanvas" width="300" height="100">Login </canvas>
    <div class="div_1">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group1">
                  
                    <div class="div_2">
                        @Html.TextBoxFor(m => m.Email, new { @class = "search_login" , placeholder = "Digite seu e-mail"})
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group2">
                
                    <div class="div_2_1">
                        @Html.PasswordFor(m => m.Password, new { @class = "search_login",placeholder="Digite sua senha" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe, new { @class = "chupeta" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Efetuar login" class="btn btn-default" />
                    </div>
                </div>
                <p>

                    <a onclick="window.open('/Account/Register','width=680,height=470')" ;return false;" id="Register" class="text_criarconta" href="/Account/Register">Criar uma conta</a>

                </p>

                <p>

                    <a class="text_esquecisenha" href="/Account/ForgotPassword">Esqueci minha senha</a>
                </p>
            }
        </section>

    </div>

    <img class="ball" src="~/assets/ball.png">
    <img class="ball2" src="~/assets/ball.png">
    <img class="ball3" src="~/assets/ball.png">
</body>
</html>

<style>
    body{
        margin:0;

    }
    .logo_id {
        
        width: 10%;
        margin-top:0px;
    }
  
</style>




